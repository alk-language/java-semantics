/*
  Brzozowski's automaton
*/ 
detAut(ast, Sigma) {
  state = 0;
  ast = simplify(ast);
  if (epsIn(ast))
    map = < [state, ast, "acc"] >;
  else 
    map = < [state, ast] >;
  derSet = { ast };
  do {
    derSet1 = derSet;
    forall s in Sigma 
      forall ast in derSet1 {
        ast1 = simplify(der(ast, s));
        if (!(ast1 in derSet) && ast1 != []) {
          derSet = derSet U { ast1 };
	  state++;
	  if (epsIn(ast1)) {
print(ast1);
            map.pushBack([state, ast1,"acc"]);
	  }
	  else
	    map.pushBack([state, ast1]);
	}
      }	
  } while (derSet != derSet1);
  aut = {};
  forall p in map
    forall q in map 
      forall s in Sigma
        if (q[1] == simplify(der(p[1], s)))
	  aut = aut U { < p[0], s, q[0] > };
  forall p in map
    p[1] = ast2string(p[1]);
  return [aut, map];
}

