swap(out a, i, j)
@requires a: array<int>
@requires i: int
@requires j: int
@requires 0 <= i && i < a.size()
@requires 0 <= j && j < a.size()
@ensures a[i] == \old(a)[j]  
@ensures a[j] == \old(a)[i]
{
  temp = a[i];
  a[i] = a[j];
  a[j] = temp;
}

@havoc a : array<int>;
@assume a.size() == 2;
b = a;
swap(a, 0, 1);
@assert a[1] == b[0] && a[0] == b[1];