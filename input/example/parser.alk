/*

 Sigma ::= "a" | "b" | "c"
 
 expression ::= term ("+" term)* 
 term ::= maybeStar
        | maybeStar ("." maybeStar)* 
 maybeStar ::= factor ["*"] // equiv to  factor | factor "*"
 factor ::=
     Sigma
     | "(" expression ")"

*/

/*
global variables:
  sigma - the alphabet
  input - the string to parse
  index - the current position in the input
*/
// the current symbol
sym() uses index, input {
  if (index < input.size())
    return input.at(index);
  return "\0";
}

// goes to the next symbol
nextSym() modifies index, input {
  if (index < input.size()) {
    index++;
/*
    // skip the spaces
    while (input.at(index) == " " && index < input.size())
    index++;
*/
  } else
    error("nextsym: expected a symbol");
}

// prints an error message
error(msg) uses index {
  print(msg + " at position ");
  print(index);
  print("");
}

/*
  tests if the current symbol is accepted and
  if yes, advances in the input
*/
accept(s) {
    if (sym() == s) {
        nextSym();
        return true;
    }
    return false;
}

/*
  test if the current symbol is in the alphabet Sigma and
  if yes, advances in the input
*/
acceptSigma() uses sigma {
  for (i = 0; i < sigma.size(); ++i) 
      if (accept(sigma[i])) {
        return true;
      }
  return false;
}

// test if the current symbol is the exptected one
expect(s) {
    if (accept(s))
        return true;
    error("expect: unexpected symbol");
    return false;
}

// parses a factor and returs its AST
/*
 factor ::=
     Sigma
     | "(" expression ")"
*/
factor() {
    s = sym();
    if (acceptSigma()) {
      return [s,<>];
    } else if (accept("(")) {
        ast = expression();
        expect(")");
        return ast;
    } 
}

// parses a maybeStar and returs its AST
maybeStar() {
    ast = factor();
    if (accept("*")) 
      return ["_*", < ast >];
    else
      return ast;
}

// parses a term and returs its AST
