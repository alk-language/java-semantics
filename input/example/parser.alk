*/
term() {
    ast = maybeStar();
    list = < ast >;
    while (accept(".")) {
      ast1 = maybeStar();
      list.pushBack(ast1);
    }
    if (list.size() > 1)
      return ["_._", list];
    else
      return list.at(0);
}

// parses an epression and returs its AST
expression() {
    ast = term();
    list = < ast >;
    while (accept("+")) {
      ast = term();
      list.pushBack(ast);
    }
    if (list.size() > 1)
      return ["_+_", list];
    else
      return list.at(0);
}


