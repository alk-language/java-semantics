/* Sum of two integer numbers */
sum(a, b)
@requires a : int && b : int
@ensures \result : int
@ensures \result == \old(a) + \old(b)
{
    return a + b;
}

/* Sum of two float numbers */
sum2(a, b)
@requires a : float && b : float
@ensures \result : float
@ensures \result == \old(a) + \old(b)
{
    return a + b;
}

// === SIMPLE CASES - int ====
@assert sum(52, 138) == 190;
@assert sum(-52, -138) == -190;
@assert sum(-52, 138) == 86;
@assert sum(52, -138) == -86;

// === ZERO CASES - int ====
@assert sum(0, 0) == 0;
@assert sum(0, -138) == -138;
@assert sum(-172, 0) == -172;
@assert sum(0, 138) == 138;
@assert sum(172, 0) == 172;

// === BIG INT CASES - int ===
@assert sum(12764561254675341234, 345761782364721986472891) == 345774546925976661814125;
@assert sum(-12764561254675341234, -345761782364721986472891) == -345774546925976661814125;
@assert sum(-12764561254675341234, 345761782364721986472891) == 345749017803467311131657;
@assert sum(12764561254675341234, -345761782364721986472891) == -345749017803467311131657;

// === SIMPLE CASES - float ====
@assert sum2(52.2, 138.8) == 191.0;
@assert sum2(-52.2, -138.8) == -191.0;
@assert sum2(-52.5, 138.5) == 86.0;
@assert sum2(52.5, -138.5) == -86.0;

// === ZERO CASES - float ====
@assert sum2(0.0, 0.0) == 0.0;
@assert sum2(0, -138.8) == -138.8;
@assert sum2(-172.3, 0) == -172.3;
@assert sum2(0, 138.8) == 138.8;
@assert sum2(172.3, 0) == 172.3;

// === BIG FLOAT CASES - float ===
@assert sum2(51232.67534, 41321.42093) == 92554.09627;
@assert sum2(-51232.67534, -41321.42093) == -92554.09627;
@assert sum2(-51232.67534, 41321.42093) == -9911.25441;
@assert sum2(51232.67534, -41321.42093) == 9911.25441;

print("Ok");