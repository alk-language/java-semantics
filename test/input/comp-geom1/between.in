sign2xTriArea(A, B, C) {
  d1 = B.y * A.x + C.y * B.x + A.y * C.x;
  d2 = C.x * B.y + B.x * A.y + A.x * C.y;
  return d1 - d2;
}

ccw(A, B, C)
/*
  turn left = +1;
  turn right = -1;
  colinear = 0;
*/
{
  ax2 = sign2xTriArea(A, B, C);
  if (ax2 > 0.0) return 1;
  if (ax2 < 0.0) return -1;
  return 0;
}

/*
  tests if C is between A and B
*/
between(A, B, C) {
  if (ccw(A, B, C) != 0) return false;
  if (A.x != B.x)
    return (A.x <= C.x && C.x <= B.x) ||
           (B.x <= C.x && C.x <= A.x);
  else
    return (A.y <= C.y && C.y <= B.y) ||
           (B.y <= C.y && C.y <= A.y);
}


